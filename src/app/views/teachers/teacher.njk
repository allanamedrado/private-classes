{% extends "layout.njk" %}

{% block content %}
    <div class="card card-table" >
        <table width="100%">
            <thead>
                <tr>
                    <th>Complete Name</th>
                    <th>Monitoring</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td> {{ teacher.name }} </td>
                        <td>                           
                            <span> {{ teacher.area }} </span>                                                   
                        </td>
                        <td><a href="/teachers/{{teacher.id}}"> See details </a></td>
                    </tr>
                {% endfor %}                
            </tbody>
        </table>
    </div>
{% endblock %}